# This package is just4fun, do not take serious!
# Maintainer: SuperBart <superbart_chen@qq.com>
pkgname=python-helang-git
pkgver=1.0.0
pkgrel=1
pkgdesc="Wow, it's so cool! Science with delightment."
arch=("any")
url="https://hub.fastgit.xyz/kifuan/helang"
license=('MIT')
depends=("python" "python-tqdm" "python-requests")
makedepends=("git")
source=("git+$url"
		"setup.py"
		"avoid_ltc.patch")
md5sums=("SKIP"
		 "SKIP"
		 "SKIP")

build() {
	cd $srcdir/helang
	patch -p1 < ../avoid_ltc.patch
	cp ../setup.py $srcdir/helang
	python setup.py build
}

package() {
	cd $srcdir/helang
	python setup.py install --root="$pkgdir" --optimize=1
}
